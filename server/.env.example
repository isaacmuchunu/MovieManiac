# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/moviemania?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-token-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-min-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_BASIC=price_basic_id
STRIPE_PRICE_STANDARD=price_standard_id
STRIPE_PRICE_PREMIUM=price_premium_id

# TMDB API (for metadata)
TMDB_API_KEY=617c0260598c225e728db47b98d5ea6f

# Video Storage (S3 or local)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=moviemania-videos

# CDN (Optional)
CDN_URL=

# FFmpeg Path (if not in PATH)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# ===================
# Security Configuration (REQUIRED)
# ===================
# URL Hash Secret - REQUIRED for production
# Generate a secure secret: openssl rand -base64 32
# This secret is used to hash content IDs for secure URL generation
# WARNING: Changing this value will invalidate all existing hashed URLs
URL_HASH_SECRET=your-secure-hash-secret-here

# Admin IP Whitelist (Optional - comma-separated)
# ADMIN_IP_WHITELIST=127.0.0.1,192.168.1.100

# ===================
# Admin User Seed (for db:seed command)
# ===================
# Set these to create an admin user during database seeding
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_NAME=Admin User
